{
  "name": "presentations-manager",
  "version": "1.0.0",
  "description": "Manage team presentations content",
  "main": "index.js",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
